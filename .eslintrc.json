{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 2015,
        "sourceType": "module" // informuje eslinta o zmianie podejscia na "modu≈Çowe"
    },
    "rules": {
        "linebreak-style": [
            "off"
        ],
        "no-console": [
            "off"
        ]
    },
    "globals": {
      "Handlebars": false
    }
}
